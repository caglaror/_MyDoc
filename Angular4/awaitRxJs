    async OyuncuYukle():Promise<any>
    {
        await new Promise(resolve => {
            this.af.list<Oyuncu>(this.oyuncularPath).valueChanges()
                   .subscribe(p => {                                       
                                this.oyuncular = p;
                                resolve();
                             });
        });

    }
    
